.equ        OUT -1
.equ        HALT -1
.equ        MONE -1

#========================================
#           Start
#========================================
            sble  nums sum              # Add the three numbers to sum
            sble  nums+1 sum
            sble  nums+2 sum
            sble  sum OUT               # Output result
            sble  sum sum HALT          # End program

#========================================
#           Data Storage
#========================================
nums:       .word MONE MONE-1 MONE-2    # The numbers to add
sum:        .ascii "0"                  # Add to ASCII '0' so can easily
                                        # display result
